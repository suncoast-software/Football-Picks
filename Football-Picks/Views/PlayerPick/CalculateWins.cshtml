@model IEnumerable<Football_Picks.Models.MatchupWinner>

@{
    ViewData["Title"] = "CalculateWins";
}

<h1 class="text-black-50">CalculateWins for: <span class="text-shadow text-warning">@ViewBag.player</span></h1>
@if (ViewBag.status == "Not Found")
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">No Player Picks Found<span class="ml-3"><a asp-controller="Players" asp-action="Index">Back to List</a></span></div>
        </div>
    </div>
}
else
{
<table class="table table-hover table-striped">
    <thead class="gradient-top-to-bottom text-warning">
        <tr>
            <th>Winner</th>
            <th>Pick</th> 
            <th>Win</th>
        </tr>
    </thead>
    @foreach (var pick in Model)
    {
        <tbody>
            <tr class="gradient-top-to-bottom">
                <td><img class="img-fluid img-fluid" src="@Url.Content(@pick.WinTeamLogoUrl)" width="64" /><strong class="text-shadow text-black-50 ml-3">@pick.WinnerTeam</strong></td>
                <td><img class="img-fluid img-fluid" src="@Url.Content(@pick.PlayerPickLogoUrl)" width="64" /><strong class="text-shadow text-black-50 ml-3">@pick.PlayerPick</strong></td>
                <td>@pick.Win</td>
            </tr>
        </tbody>

    }
</table>
<div class="row">
    <div class="col-md-3">
        <label>Tie Breaker Points &nbsp;[@ViewBag.tiebreaker]</label>
    </div>
    <div class="col-md-3">
        <label>Wins &nbsp;<strong class="text-black-50">@ViewBag.wincount</strong></label>
    </div>
    <div class="col-md-3">
        <a asp-controller="Players" asp-action="Index">Back to List</a>
    </div>
</div>
}

