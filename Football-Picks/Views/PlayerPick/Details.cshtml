@model Football_Picks.Models.Player

@{
    ViewData["Title"] = "Details";
    int count = 0;
}

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 text-black-50 text-bold">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10 text-black-50 text-bold">
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt class="col-sm-2">
            Tie Breaker Points
        </dt>
        <dd class="text-black-50 text-bold col-md-10">
            @ViewBag.tieBreaker
        </dd> 
        <dd class="col-sm-10">
            <a asp-controller="Players" asp-action="Index">Back to List</a>
        </dd>
        
    </dl>
</div>
<table class="table table-striped table-hover">
    <thead class="gradient-top-to-bottom">
        <tr>
            <th>Pick</th>
            <th>Week</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var pick in ViewBag.picks)
        {
            <tr class="gradient-top-to-bottom">
                <td>
                    <img class="img img-fluid" src="@Url.Content(ViewBag.abr[count])" width="64" />
                    <label class="ml-3 text-warning text-shadow">@pick.PlayerPick</label>
                </td>
                <td class="text-warning text-shadow">@pick.Week</td>
                <td class="text-warning text-shadow">@pick.Year</td>
            </tr>
            count++;
        }
    </tbody>
</table>

