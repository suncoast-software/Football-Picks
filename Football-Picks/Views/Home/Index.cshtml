@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="gradient-top-to-bottom text-left shadow-nohover round-corner-div" style="height: 35px;">
        <div class="ml-2 text-warning" style="font-size: 18pt;"><strong class="text-shadow">Football Picks 2019 &nbsp;Week @ViewBag.week</strong></div>
    </div>

    <div class="alert gradient-top-to-bottom shadow-nohover mt-3" role="alert">
        <h4 class="alert-heading text-warning text-shadow">Update 10/25/2019</h4>
        <p class="text-black-50 text-bold">Added "Calculate All Player Wins"</p>
        <hr>
        <p class="text-black-50 text-bold mb-0">Now you can see all the players win with a single click of a button</p>
    </div>
    <div class="alert gradient-top-to-bottom shadow-nohover mt-3" role="alert">
        <h4 class="alert-heading text-warning text-shadow">Update 10/26/2019</h4>
        <p class="text-black-50 text-bold">Added "Calculate All Player Wins"</p>
        <hr>
        <p class="text-black-50 text-bold mb-0">Now the calculate all players wins returns an ordered list, first by win count then by alphabet.</p>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">Please Register or Login to continue!</div>
        </div>
    </div>
}

