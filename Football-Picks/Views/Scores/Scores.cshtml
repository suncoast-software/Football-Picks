@model IEnumerable<Football_Picks.Models.Matchup>
@{
    ViewData["Title"] = "Scores";
}


<div class="row">
    <div class="col-sm-6">
        <h4 class="text-warning text-bold text-shadow">Scores</h4>
    </div>
</div>
<dl class="row">
    <dt class="col-sm-2 text-warning text-shadow text-bold">
        Week:
    </dt>
    <dd class="col-sm-10">
        @ViewBag.week
    </dd>
    <dt class="col-sm-2 text-warning text-shadow text-bold">
        Matchup Count:
    </dt>
    <dd class="col-sm-10">
        @Model.Count()
    </dd>
</dl>
@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var score in Model)
        {
            <div class="col-sm-6">
                <div class="card card-box-shadow mb-2">
                    <div class="card-body">
                        <h5 class="card-title">Matchup Week: @ViewBag.week Score</h5>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="card-subtitle mr-2 d-flex align-content-between">
                                    <img class="img-fluid" src="@Url.Content(@score.AwayTeam.Logo_Url)" width="64" />
                                    <h7 class="text-black-50 mt-3">(@score.AwayTeam.Team_Record)</h7>
                                    <strong class="card-subtitle mt-3 ml-auto">@score.AwayTeam.Score</strong>
                                </h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="card-subtitle mr-2 d-flex align-content-between">
                                    <img class="img-fluid" src="@Url.Content(@score.HomeTeam.Logo_Url)" width="64" />
                                    <h7 class="text-black-50 mt-3">(@score.HomeTeam.Team_Record)</h7>
                                    <strong class="card-subtitle mt-3 ml-auto">@score.HomeTeam.Score</strong>
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{

}

