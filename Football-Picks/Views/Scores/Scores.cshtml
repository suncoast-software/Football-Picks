@model  IEnumerable<Football_Picks.Models.Matchup>
@{
    ViewData["Title"] = "Scores";
}



@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-warning text-shadow">Scores: Week @ViewBag.week</h1>
            <table class="table table-striped table-hover">
                <thead class="gradient-top-to-bottom text-warning text-shadow">
                    <tr>
                        <th>Away Team</th>
                        <th>Score</th>
                        <th>Home Team</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var match in Model)
                    {
                        <tr class="gradient-top-to-bottom">
                            <td><img class="img-fluid img-fluid" src="@Url.Content(match.AwayTeam.Logo_Url)" width="64" />&nbsp;@match.AwayTeam.Team_Name <span class="text-warning text-shadow">(@match.AwayTeam.Team_Record)</span></td>
                            <td class="text-warning text-shadow text-bold">@match.AwayTeam.Score</td>
                            <td><img class="img-fluid img-fluid" src="@Url.Content(match.HomeTeam.Logo_Url)" width="64" />&nbsp;@match.HomeTeam.Team_Name <span class="text-warning text-shadow">(@match.HomeTeam.Team_Record)</span></td>
                            <td class="text-warning text-shadow text-bold">@match.HomeTeam.Score</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>   
}
else
{

}

