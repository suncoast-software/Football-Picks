@model IEnumerable<Football_Picks.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<div class="gradient-bg text-left shadow-nohover round-corner-div" style="height: 35px;">
    <div class="ml-2 text-warning text-shadow" style="font-size: 18pt;"><strong>Football Picks -&nbsp;Current Players [@Model.Count()]</strong></div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="mt-3">
            <a class="btn btn-warning shadow-nohover text-dark" role="button" asp-action="Create">Create New Player</a>
            <a class="btn btn-warning shadow-nohover text-dark ml-3" role="button" asp-controller="Players" asp-action="CalculateAllPlayerWins">Calculate ALL Player Wins</a>
        </p>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-sm-12">
        <div class="card card-shadow-sm mb-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <p class="text-black-50">Name:<span class="text-dark text-bold"> &nbsp;@Html.DisplayFor(modelItem => item.Name)</span></p>
                    </div>
                    <div class="col-sm-4">
                        <p class="text-black-50">Company:<span class="text-dark text-bold"> &nbsp;@Html.DisplayFor(modelItem => item.Company)</span></p> 
                    </div>
                    <div class="col-sm-4">
                        <a class="text-secondary" asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
                        <a class="text-secondary" asp-action="Picks" asp-controller="PlayerPick" asp-route-id="@item.PlayerId">Picks</a> |
                        <a class="text-secondary" asp-action="CalculateWins" asp-controller="PlayerPick" asp-route-id="@item.PlayerId">Calculate Wins</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    
</div>



